{
  "name": "@1inch-exchange/limit-order-protocol",
  "version": "0.0.1",
  "description": "1inch Limit Order Protocol",
  "repository": {
    "type": "git",
    "url": "git@github.com:1inch/limit-order-protocol.git"
  },
  "license": "MIT",
  "dependencies": {
    "@openzeppelin/contracts": "^4.0.0"
  },
  "devDependencies": {
    "@openzeppelin/test-helpers": "^0.5.10",
    "chai": "^4.3.4",
    "coveralls": "^3.1.0",
    "eslint": "^7.23.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-standard": "^5.0.0",
    "eth-gas-reporter": "^0.2.22",
    "eth-sig-util": "^3.0.1",
    "ethereumjs-util": "^7.0.9",
    "ethereumjs-wallet": "^1.0.1",
    "ganache-cli": "^6.12.2",
    "solc": "^0.8.3",
    "solidity-coverage": "^0.7.16",
    "solhint": "^3.3.4",
    "truffle": "^5.2.6",
    "truffle-flattener": "^1.5.0"
  },
  "scripts": {
    "test": "scripts/test.sh",
    "coverage": "truffle run coverage",
    "lint:js": "eslint .",
    "lint:js:fix": "eslint . --fix",
    "lint:sol": "solhint --max-warnings 0 \"contracts/**/*.sol\"",
    "lint:sol:fix": "solhint --max-warnings 0 \"contracts/**/*.sol\" --fix",
    "lint": "yarn run lint:js && yarn run lint:sol",
    "lint:fix": "yarn run lint:js:fix && yarn run lint:sol:fix",
    "dist": "truffle-flattener ./contracts/LimitOrderProtocol.sol > LimitOrderProtocol.full.sol && solcjs --bin --abi --optimize LimitOrderProtocol.full.sol && mv LimitSwap_full_sol_LimitSwap.bin LimitOrderProtocol.full.bin && mv LimitSwap_full_sol_LimitSwap.abi LimitOrderProtocol.full.abi && rm *_sol_*"
  }
}
